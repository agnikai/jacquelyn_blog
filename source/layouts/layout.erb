<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Candescent Chaos" %></title>

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Bad+Script" />
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Qwigley" />
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Poiret+One" />
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Cabin+Sketch' />

    <script src="https://code.createjs.com/easeljs-0.8.2.min.js"></script>

    
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %> home_page">

    <%= yield %> 
    
  </body>
</html>